<%- include('../header.ejs') %>

<section class="vh-78" style="background-color: rgba(6, 151, 112, 0.774);">
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 15px;">
          <h1 class="text-center text-danger"><span class="text-danger"></span>EDIT FORM</h1>
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                
                <form action="/user/updatecourse/<%= data._id %>" method="post">
                   <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" name="name" id="form3Example1c" class="form-control" value="<%= data.name %>"/>
                      <label class="form-label" for="form3Example1c">NAME</label>
                    </div>
                   </div>
                   <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="email" name="email" id="form3Example3c" class="form-control" value="<%= data.email %>"/>
                      <label class="form-label" for="form3Example3c">EMAIL</label>
                    </div>
                   </div>
                   <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="mobile" name="mobile" id="form3Example4c" class="form-control" value="<%= data.mobile %>"/>
                      <label class="form-label" for="form3Example4c">MOBILE</label>
                    </div>
                   </div>
                   <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="address" name="address" id="form3Example4cd" class="form-control" value="<%= data.address %>"/>
                      <label class="form-label" for="form3Example4cd">ADDRESS</label>
                    </div>
                   </div>
                   <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" name="college" id="form3Example4cd" class="form-control" value="<%= data.college %>" />
                      <label class="form-label" for="form3Example4cd">COLLEGE</label>
                    </div>
                   </div>
                   <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="course" name="course" id="form3Example4cd" class="form-control" value="<%= data.course %>"/>
                        <label class="form-label" for="form3Example4cd">COURSE</label>
                      </div>
                     </div>
                     <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="stream" name="stream" id="form3Example4cd" class="form-control" value="<%= data.stream %>"/>
                        <label class="form-label" for="form3Example4cd">STREAM</label>
                      </div>
                     </div>
                   <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                     <button type="submit" class="btn btn-primary btn-lg">UPDATE</button>
                    </div>

                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="/upload/course.edit.jpg"
                  class="img-fluid" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
 <%- include('../footer.ejs') %>